{
  "name": "@webudget/shared-types",
  "version": "0.1.0",
  "description": "Types TypeScript partag√©s pour WeBudget (backend + frontend)",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./enums": {
      "import": "./dist/enums/index.js",
      "types": "./dist/enums/index.d.ts"
    },
    "./entities": {
      "import": "./dist/entities/index.js",
      "types": "./dist/entities/index.d.ts"
    },
    "./dtos": {
      "import": "./dist/dtos/index.js",
      "types": "./dist/dtos/index.d.ts"
    }
  },
  
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "type-check": "tsc --noEmit",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "clean": "rm -rf dist"
  },
  
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
