generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client-auth"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ğŸ¯ ENUMS - ImportÃ©s depuis shared-types, redÃ©finis ici pour Prisma

enum UserRole {
  USER
  ADMIN
  PREMIUM
}

// ğŸ‘¤ USER - Utilisateur de l'application
model User {
  id            Int      @id @default(autoincrement())
  email         String   @unique
  password      String   // Hash bcrypt
  name          String
  avatar        String?  // URL de la photo de profil
  role          UserRole @default(USER)
  emailVerified Boolean  @default(false)
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // ğŸ”— Relations
  refreshTokens RefreshToken[]

  @@map("users")  // Nom de la table en base
}

// ğŸ”„ REFRESH TOKEN - Pour renouveler l'access token
model RefreshToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  userId    Int
  expiresAt DateTime
  
  createdAt DateTime @default(now())

  // ğŸ”— Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("refresh_tokens")
}
