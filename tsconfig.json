{
  // üéØ Configuration TypeScript PARTAG√âE par tous les projets
  // Chaque projet (backend/frontend/packages) va "extend" ce fichier
  
  "compilerOptions": {
    // Cible ES2020 = JavaScript moderne (async/await, optional chaining, etc.)
    "target": "ES2020",
    
    // Module ESNext = import/export modernes
    "module": "ESNext",
    
    // Libraires disponibles (Promise, Map, Set, etc.)
    "lib": ["ES2020"],
    
    // Comment r√©soudre les imports (bundler = pour Vite/Webpack)
    "moduleResolution": "bundler",
    
    // Mode strict = d√©tecte plus d'erreurs
    "strict": true,
    
    // Permet import express from 'express' au lieu de import * as express
    "esModuleInterop": true,
    
    // Ignore les erreurs dans node_modules (plus rapide)
    "skipLibCheck": true,
    
    // V√©rifie que les noms de fichiers sont coh√©rents (User.ts vs user.ts)
    "forceConsistentCasingInFileNames": true,
    
    // Permet d'importer des JSON
    "resolveJsonModule": true,
    
    // G√©n√®re les .d.ts (fichiers de d√©claration TypeScript)
    "declaration": true,
    "declarationMap": true,
    
    // G√©n√®re les source maps (pour debugger)
    "sourceMap": true,
    
    // Point de d√©part pour les imports relatifs
    "baseUrl": ".",
    
    // üî• IMPORTANT : Chemins d'acc√®s pour les imports entre packages
    "paths": {
      // Permet d'√©crire: import { User } from '@webudget/shared-types'
      "@webudget/shared-types": ["packages/shared-types/src/index.ts"],
      "@webudget/shared-types/*": ["packages/shared-types/src/*"],
      
      "@webudget/shared-utils": ["packages/shared-utils/src/index.ts"],
      "@webudget/shared-utils/*": ["packages/shared-utils/src/*"]
    }
  }
}
